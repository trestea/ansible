user {{nginx_user}} {{nginx_group}};
worker_processes  {{ ansible_processor_count }};

error_log  logs/error.log error;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;
pid        logs/nginx.pid;
worker_rlimit_nofile {{worker_rlimit_nofile}};

events {
    worker_connections {{worker_connections}};
    accept_mutex off;
}


http {
    include       mime.types;
    default_type  application/octet-stream;
    charset  utf-8;
    log_format logstash "$time_iso8601 | $remote_addr | $remote_user | $request_time | $upstream_response_time | $status | $request | $host | $uri | $http_cookie | $request_method | $http_referer | $body_bytes_sent | $http_x_forwarded_for | $http_user_agent";

    access_log  logs/access.log  logstash;
    sendfile        on;
    tcp_nopush     on;
    client_header_buffer_size 32k;
    large_client_header_buffers 4 32k;
    client_max_body_size 8m;
    client_body_buffer_size 512k;
    server_names_hash_bucket_size 128;
    server_tokens off;
    gzip  on;
    gzip_min_length 1k;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_comp_level 2;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_vary on;
    keepalive_timeout  60;

    server {
        listen       80;
        server_name  localhost;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        location / {
            root   html;
            index  index.html index.htm;
        }

        #error_page  404              /404.html;

        # redirect server error pages to the static page /50x.html
        #
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
        }

